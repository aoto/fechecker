<html>
<head>
    <meta charset="utf-8"/>
    <title>ESLint监控</title>
    <link rel="icon" href="/images/icon.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <link rel="stylesheet" href="https://code.getmdl.io/1.1.3/material.indigo-pink.min.css">
    <link rel="stylesheet" href="/styles/index.css">
</head>
<body>
<h2>项目列表</h2>
<table class="mdl-data-table mdl-js-data-table mdl-shadow--2dp">
    <thead>
        <tr>
            <th class="mdl-data-table__cell--non-numeric">项目名</th>
            <th class="mdl-data-table__cell--non-numeric">仓库地址</th>
            <th class="mdl-data-table__cell--non-numeric">校验目录</th>
            <th class="mdl-data-table__cell--non-numeric">所有者</th>
        </tr>
    </thead>
    <tbody>
    <% projects.forEach(function(project) { %>
    <tr>
        <td class="mdl-data-table__cell--non-numeric"><%= project.projectName%></td>
        <td class="mdl-data-table__cell--non-numeric"><%= project.repositoryUrl%></td>
        <td class="mdl-data-table__cell--non-numeric"><%= project.dir%></td>
        <td class="mdl-data-table__cell--non-numeric"><%= project.owner%></td>
    </tr>
    <% }) %>
    </tbody>
</table>

<h2>添加项目</h2>
<form action="/add" method="POST" class="add-form mdl-card mdl-shadow--2dp">
    <div class="mdl-textfield mdl-js-textfield">
        <input type="text" class="mdl-textfield__input" id="input1" name="projectName">
        <label class="mdl-textfield__label" for="input1">项目名(英文)...</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield">
        <input type="text" class="mdl-textfield__input" id="input2" name="repositoryUrl">
        <label class="mdl-textfield__label" for="input1">git仓库地址...</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield">
        <input type="text" class="mdl-textfield__input" id="input3" name="dir">
        <label class="mdl-textfield__label" for="input1">校验目录...</label>
    </div>
    <div class="mdl-textfield mdl-js-textfield">
        <input type="text" class="mdl-textfield__input" id="input4" name="owner">
        <label class="mdl-textfield__label" for="input1">所有者...</label>
    </div>
    <input type="submit" value="添 加" class="mdl-button mdl-js-button mdl-button--raised mdl-button--colored">
</form>

<h2>校验</h2>
<div class="check">
    <div class="auto-check">
        <a href="javascript:;" id="J_check">手工执行校验</a>
    </div>
    <div class="mdl-progress mdl-js-progress mdl-progress__indeterminate" id="J_progress" style="display: none;"></div>
    <div class="tip">
        <p>默认每日晚间12:00:00自动执行校验</p>
    </div>
</div>
<script defer src="https://code.getmdl.io/1.1.3/material.min.js"></script>
<script src="/scripts/index.js"></script>
</body>
</html>